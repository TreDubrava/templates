		"@types/react-dom": "^18.0.0",
		"@typescript-eslint/eslint-plugin": "^8.46.4",
		"@typescript-eslint/parser": "^8.46.4",
		"esbuild": "0.25.2",
		"eslint": "^9.39.1",
		"prettier": "^3.6.2",
		"tsx": "^4.20.6",
		"typescript": "^5.8.3",
