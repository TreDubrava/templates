{
	"name": "x402-paywall-template",
	"description": "Paywall gated API endpoints using the x402 protocol with stateless cookie-based authentication.",
	"private": true,
	"cloudflare": {
		"label": "x402 Paywall",
		"products": [
			"Workers"
		],
		"categories": [
			"starter",
			"ai"
		]
	},
	"scripts": {
